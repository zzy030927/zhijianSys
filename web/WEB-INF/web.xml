        <servlet-class>zhijian.servlet.PreviewExcelServlet</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size> <!-- 10 MB -->
            <max-request-size>20971520</max-request-size> <!-- 20 MB -->
            <file-size-threshold>512000</file-size-threshold> <!-- 500 KB -->
        </multipart-config>
    </servlet>
